#RewriteEngine On
#RewriteCond %{REMOTE_ADDR} !^111.111.111.111$
#RewriteCond %{REQUEST_URI} !.(css|gif|ico|jpg|js|png|swf|txt)$
#RewriteCond %{REQUEST_URI} !^/client/
#RewriteRule .* maintenance.php [L]
